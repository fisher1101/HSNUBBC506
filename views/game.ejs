<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game1</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.1/css/bootstrap.min.css"
      integrity="sha384-VCmXjywReHh4PwowAiWNagnWcLhlEJLA5buUprzK8rxFgeH0kww/aWY76TfkUoSX"
      crossorigin="anonymous"
    />
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
      integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.1/js/bootstrap.min.js"
      integrity="sha384-XEerZL0cuoUbHE4nZReLT7nx9gQrQreJekYhJD9WNWhH8nEW+0c5qq7aIo2Wl30J"
      crossorigin="anonymous"
    ></script>
    <link href="/Icons/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="/stylesheets/game1_style.css" />
    <link rel="stylesheet" href="/stylesheets/share.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="#">
        <img
          class="nav-logo"
          src="https://i2.wp.com/www.hs.ntnu.edu.tw/hsnuwp/wp-content/uploads/2010/10/%E9%99%84%E4%B8%AD%E6%A0%A1%E5%BE%BD_%E5%AE%98%E6%96%B9%E6%AD%A3%E5%BC%8F%E7%89%88_%E5%BD%A9%E8%89%B2%E5%8E%9F_png_96dpi1.png"
          alt=""
        />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="../index.html"
              >首頁<span class="sr-only">(current)</span></a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="../new">新增數據</a>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdown"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              Dropdown
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">Something else here</a>
            </div>
          </li>
        </ul>

        <form class="form-inline my-2 my-lg-0">
          <input
            class="form-control mr-sm-2"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
            Search
          </button>
        </form>
      </div>
    </nav>

    <div id="game" class="container mt-3">
      <ul class="nav justify-content-center tabs">
        <li class="nav-item">
          <a
            class="nav-link tabs-active"
            id="box-navs"
            data-toggle="tab"
            href="#BOX"
            role="tab"
            aria-controls="BOX"
            aria-selected="true"
            >BOX SCORE</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link"
            id="photo-navs"
            data-toggle="tab"
            href="#PHOTO"
            role="tab"
            aria-controls="PHOTO"
            aria-selected="false"
            >PHOTO</a
          >
        </li>
      </ul>

      <div class="row mt-5 text-center">
        <div class="col-sm-2 team-logos">
          <img src=<%= game.home ? `/images/${game.vs}.png` : "/images/HSNU.png"
          %> alt="" />
        </div>
        <div class="col-sm-8 mt-sm-0 mt-3">
          <h3><%= game.title %></h3>
          <h5><%= game.date %></h5>
          <table class="table table-responsive-lg">
            <thead>
              <tr>
                <th scope="col">FINAL</th>
                <th scope="col">1</th>
                <th scope="col">2</th>
                <th scope="col">3</th>
                <th scope="col">4</th>
                <th scope="col">5</th>
                <th scope="col">6</th>
                <th scope="col">7</th>
                <th scope="col">8</th>
                <th scope="col">9</th>
                <th scope="col"></th>
                <th scope="col">R</th>
                <th scope="col">H</th>
                <th scope="col">E</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row"><%= game.home ? game.vs : "師大附中" %></th>
                <% for(const s of game.guest_score){ %>
                <td><%= s %></td>
                <% } %>
                <td></td>
                <td><%= game.guest_score_total %></td>
                <td><%= game.home ? game.P_H : game.B_H%></td>
                <td><%= game.guest_error %></td>
              </tr>

              <tr>
                <th scope="row"><%= game.home ? "師大附中": game.vs%></th>
                <% for(const s of game.home_score){ %>
                <td><%= s %></td>
                <% } %>
                <td></td>
                <td><%= game.home_score_total %></td>
                <td><%= game.home ? game.B_H : game.P_H%></td>
                <td><%= game.home_error %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-sm-2 team-logos">
          <img src=<%= game.home ? "/images/HSNU.png" : `/images/${game.vs}.png`
          %> alt="" />
        </div>
      </div>

      <div class="tab-content">
        <div
          id="BOX"
          class="tab-pane fade show active"
          role="tabpanel"
          aria-labelledby="box-navs"
        >
          <h4>打擊數據</h4>
          <table
            class="table table-hover table-striped text-center stat-table table-responsive-sm mt-3"
          >
            <thead>
              <tr class="bg-blue text-white">
                <th scope="col">#</th>
                <th scope="col">打席數</th>
                <th scope="col">打數</th>
                <th scope="col">安打</th>
                <th scope="col">打點</th>
                <th scope="col">得分</th>
                <th scope="col">三振</th>
                <th scope="col">四死球</th>
              </tr>
            </thead>
            <tbody>
              <% for(const a of game.batters){ %>
              <tr>
                <th><%= a.name %></th>
                <td><%= a.PA %></td>
                <td><%= a.AB %></td>
                <td><%= a.H %></td>
                <td><%= a.RBI %></td>
                <td><%= a.R %></td>
                <td><%= a.SO %></td>
                <td><%= a.BB %></td>
              </tr>
              <% } %>
              <tr>
                <th scope="row">total</th>
                <td><%= game.B_PA %></td>
                <td><%= game.B_AB %></td>
                <td><%= game.B_H %></td>
                <td><%= game.B_RBI %></td>
                <td><%= game.B_R %></td>
                <td><%= game.B_SO %></td>
                <td><%= game.B_BB %></td>
              </tr>
            </tbody>
          </table>

          <h4>投手數據</h4>
          <table
            class="table table-hover table-striped text-center stat-table table-responsive-sm mt-3"
          >
            <thead>
              <tr class="bg-blue text-white">
                <th scope="col">#</th>
                <th scope="col">局數</th>
                <th scope="col">打席數</th>
                <th scope="col">打數</th>
                <th scope="col">安打</th>
                <th scope="col">三振</th>
                <th scope="col">四死球</th>
                <th scope="col">失分</th>
                <th scope="col">自責分</th>
              </tr>
            </thead>
            <tbody>
              <% for(const a of game.pitchers){ %>
              <tr>
                <th><%= a.name %></th>
                <td><%= a.I %></td>
                <td><%= a.PA %></td>
                <td><%= a.AB %></td>
                <td><%= a.H %></td>
                <td><%= a.SO %></td>
                <td><%= a.BB %></td>
                <td><%= a.R %></td>
                <td><%= a.ER %></td>
              </tr>
              <% } %>
              <tr>
                <th scope="row">total</th>
                <td><%= game.P_I %></td>
                <td><%= game.P_PA %></td>
                <td><%= game.P_AB %></td>
                <td><%= game.P_H %></td>
                <td><%= game.P_SO %></td>
                <td><%= game.P_BB %></td>
                <td><%= game.P_R %></td>
                <td><%= game.P_ER %></td>
              </tr>
            </tbody>
          </table>
          <div class="text-center">
            <button
              type="button"
              class="btn btn-danger"
              onclick="deleteGame('<%= game.title %>')"
            >
              刪除
            </button>
            <a href="/game/<%= game.title %>/edit "
              ><button type="button" class="btn btn-warning">編輯</button></a
            >
          </div>
        </div>

        <div
          id="PHOTO"
          class="tab-pane fade"
          role="tabpanel"
          aria-labelledby="photo-navs"
        >
          <h1>PHOTO</h1>
          <div
            id="carouselExampleIndicators"
            class="carousel slide"
            data-ride="carousel"
          >
            <ol class="carousel-indicators">
              <li
                data-target="#carouselExampleIndicators"
                data-slide-to="0"
                class="active"
              ></li>
              <li
                data-target="#carouselExampleIndicators"
                data-slide-to="1"
              ></li>
              <li
                data-target="#carouselExampleIndicators"
                data-slide-to="2"
              ></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img
                  src="https://picsum.photos/2048/1536?random=1"
                  class="d-block w-100"
                  alt="..."
                />
              </div>
              <div class="carousel-item">
                <img
                  src="https://picsum.photos/2048/1536?random=2"
                  class="d-block w-100"
                  alt="..."
                />
              </div>
              <div class="carousel-item">
                <img
                  src="https://picsum.photos/2048/1536?random=3"
                  class="d-block w-100"
                  alt="..."
                />
              </div>
            </div>
            <a
              class="carousel-control-prev"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="prev"
            >
              <span
                class="carousel-control-prev-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Previous</span>
            </a>
            <a
              class="carousel-control-next"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="next"
            >
              <span
                class="carousel-control-next-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <footer class="text-center py-3 mt-5">
      <p>2020師大附中棒球社</p>
      <a href="https://www.facebook.com/hsnubbt"
        ><i class="fab fa-facebook icon mx-1"></i
      ></a>
      <a href="https://www.instagram.com/hsnubbc_506/"
        ><i class="fab fa-instagram icon mx-1"></i
      ></a>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/javascripts/game.js"></script>
  </body>
</html>
